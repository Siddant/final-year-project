<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fintessapplication.com.siddant.fintessapplication.settings"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="10dip"
        android:id="@+id/linearLayout3"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1" >

            <TextView
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:text="Feedback type"
                android:id="@+id/textView4"
                android:textSize="20sp"
                android:textColor="#000101"
                android:layout_alignTop="@+id/spinner4"
                android:layout_alignParentStart="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="0.17"
            android:weightSum="1"
            android:id="@+id/linearLayout2" >

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:spinnerMode="dropdown"
                android:layout_above="@+id/spinner5"
                android:layout_alignStart="@+id/spinner5" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="10dip"
        android:id="@+id/linearLayout9"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1" >

            <TextView
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:text="Time you like to get feedback"
                android:id="@+id/textView18"
                android:textSize="20sp"
                android:textColor="#000101"
                android:layout_below="@+id/spinner4"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/textView7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="0.17"
            android:weightSum="1"
            android:id="@+id/linearLayout4" >

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:spinnerMode="dropdown"
                android:layout_above="@+id/spinner6"
                android:layout_alignStart="@+id/spinner6" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="10dip"
        android:id="@+id/linearLayout11"
        android:layout_below="@+id/linearLayout9"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1" >

            <TextView
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:text="Get feed to maintain speed"
                android:id="@+id/textView11"
                android:textSize="20sp"
                android:textColor="#000101"
                android:layout_below="@+id/spinner4"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/textView7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="0.17"
            android:weightSum="1"
            android:id="@+id/linearLayout10" >

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner3"
                android:spinnerMode="dropdown"
                android:layout_above="@+id/spinner6"
                android:layout_alignStart="@+id/spinner6" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="10dip"
        android:id="@+id/linearLayout13"
        android:layout_below="@+id/linearLayout11"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1" >

            <TextView
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:text="Stride length (CM)"
                android:id="@+id/textView2"
                android:textSize="20sp"
                android:textColor="#000101"
                android:layout_alignTop="@+id/spinner4"
                android:layout_alignParentStart="true"
                android:layout_weight="0.65" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1"
            android:id="@+id/linearLayout12" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editText2"
                android:text="0"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignEnd="@+id/btn_save"
                android:layout_alignStart="@+id/btn_save"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="10dip"
        android:id="@+id/linearLayout14"
        android:layout_below="@+id/linearLayout13"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1" >

            <TextView
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:text="Maximum speed"
                android:id="@+id/textView"
                android:textSize="20sp"
                android:textColor="#000101"
                android:layout_alignTop="@+id/spinner4"
                android:layout_alignParentStart="true"
                android:layout_weight="0.65" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1"
            android:id="@+id/linearLayout" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editText"
                android:text="0"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignEnd="@+id/btn_save"
                android:layout_alignStart="@+id/btn_save"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="10dip"
        android:id="@+id/linearLayout16"
        android:layout_below="@+id/linearLayout14"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1" >

            <TextView
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:text="Minimum speed"
                android:id="@+id/textView5"
                android:textSize="20sp"
                android:textColor="#000101"
                android:layout_alignTop="@+id/spinner4"
                android:layout_alignParentStart="true"
                android:layout_weight="0.65" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1"
            android:id="@+id/linearLayout15" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editText4"
                android:text="0"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignEnd="@+id/btn_save"
                android:layout_alignStart="@+id/btn_save"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="10dip"
        android:id="@+id/linearLayout18"
        android:layout_below="@+id/linearLayout16"
        android:layout_alignEnd="@+id/linearLayout16"
        android:layout_marginEnd="246dp"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="save"
            android:layout_marginRight="58dp"
            android:layout_alignParentBottom="true" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:layout_marginRight="58dp"
            android:layout_alignTop="@+id/button8"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:layout_weight="0.24" />
     </LinearLayout>

</RelativeLayout>
